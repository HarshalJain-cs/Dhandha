{
  "name": "jewellery-erp-desktop",
  "version": "1.0.0",
  "description": "Jewellery Inventory Management Desktop Software",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:main": "webpack --watch --config webpack.main.config.ts",
    "dev:renderer": "vite",
    "dev:electron": "wait-on dist/main/index.js http://localhost:5173 && electron .",
    "build": "npm run build:main && npm run build:renderer && npm run build:preload",
    "build:main": "webpack --config webpack.main.config.ts",
    "build:preload": "webpack --config webpack.preload.config.ts",
    "build:renderer": "vite build",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "postinstall": "electron-rebuild -f -w sqlite3,usb,node-hid,serialport"
  },
  "keywords": [
    "jewellery",
    "erp",
    "inventory",
    "billing",
    "electron"
  ],
  "author": "Your Company",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarshalJain-cs/Dhandha.git"
  },
